{
  "manifest_version": 3,
  "name": "OpenChatPDF",
  "description": "Open-source Chrome extension to save ChatGPT conversations as PDF files.",
  "version": "1.1",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*", "https://chat.openai.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "ChatGPT Save as PDF"
  }
}